<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id ="@+id/rlayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20px"
    >
<TextView android:id="@+id/thanks_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Thank you for using BusinessRate. Click a radio button below to proceed."
/>
<RadioGroup android:id="@+id/proceed_choices_radio_group"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="10px"
android:layout_below="@id/thanks_text"
>
<RadioButton android:id="@+id/rate_again"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Rate Another Business"
/>
<RadioButton android:id="@+id/search_for_top_rated"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Search for Top Rated Businesses"
/>
<RadioButton android:id="@+id/close_app"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Close Application"
/>
</RadioGroup>

</RelativeLayout>